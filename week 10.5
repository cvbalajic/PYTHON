def bubble_sort(arr):
    n = len(arr)
    num_swaps = 0
    
    # Perform the bubble sort
    for i in range(n):
        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:
                # Swap if the element found is greater than the next element
                arr[j], arr[j+1] = arr[j+1], arr[j]
                num_swaps += 1
    
    return num_swaps, arr

