def get_number_in_range(min_value, max_value):
    while True:
        try:
            num = int(input())
            if min_value <= num <= max_value:
                print("Valid input.")
                break
            else:
                print("Error: Number out of allowed range")
        except ValueError:
            print("Error: invalid literal for int()")
        break
    
# Define the range
min_range = 1
max_range = 100

# Get the number from the user
get_number_in_range(min_range, max_range)
